<idea-plugin>
    <id>net.chikach.intellij-jj</id>
    <name>Jujutsu</name>
    <vendor url="https://github.com/chika3742">chika3742</vendor>

    <description><![CDATA[
    Jujutsu VCS integration plugin for JetBrains IDEs.
    
    This plugin provides support for Jujutsu (jj), a Git-compatible version control system.
    
    Features:
    - Changes log viewer
    - Create new changes (jj new)
    - Edit/navigate between changes (jj edit)
    - Split changes (jj split)
    - Squash and merge changes (jj squash, jj merge)
    - Bookmark management
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.vcs</depends>

    <extensions defaultExtensionNs="com.intellij">
        <vcs name="Jujutsu" displayName="Jujutsu" 
             vcsClass="net.chikach.intellijjj.JujutsuVcs"
             administrativeAreaName=".jj"/>
        
        <vcsConfigurableProvider implementation="net.chikach.intellijjj.JujutsuConfigurableProvider"/>
        
        <logProvider implementation="net.chikach.intellijjj.log.JujutsuVcsLogProvider"/>
        
        <customVcsLogUiFactoryProvider implementation="net.chikach.intellijjj.log.JujutsuVcsLogUiFactoryProvider"/>

        <vcs.commitMessageProvider implementation="net.chikach.intellijjj.commit.JujutsuCommitMessageProvider"/>
        <vcsRootChecker implementation="net.chikach.intellijjj.JujutsuVcsRootChecker"/>
    </extensions>

    <actions>
        <group id="Jj.Menu" class="net.chikach.intellijjj.actions.JujutsuMenu" text="Jujutsu" popup="true">
            <action id="Jj.Commit" class="net.chikach.intellijjj.actions.JjCommitAction" text="Commit" />

            <add-to-group group-id="VcsGroup" anchor="after" relative-to-action="CheckinProject" />
        </group>

        <group id="Jj.Log.ContextMenu">
            <action id="Jj.Change.Abandon" class="net.chikach.intellijjj.actions.JjAbandon" />
            
            <add-to-group group-id="Vcs.Log.ContextMenu" />
        </group>
    </actions>
</idea-plugin>
